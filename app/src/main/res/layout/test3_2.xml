<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/imagen5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 2. \n¿Qué derechos patrimoniales hay en la ley de propiedad intelectual? "
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:id="@+id/textView8" />

    <RadioButton
        android:id="@+id/test3_p2r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="19dp"
        android:textColor="#ffffff"
        android:text="Pueden cederse, obtención de beneficios, reproducción, distribución, comunicación pública y transformación." />

    <RadioButton
        android:id="@+id/test3_p2r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="89dp"
        android:textColor="#ffffff"
        android:text="No se pueden ceder, obtención de beneficios, reproducción, distribución, comunicación pública y transformación." />

    <RadioButton
        android:id="@+id/test3_p2r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="149dp"
        android:textColor="#ffffff"
        android:text="Pueden cederse, no se obtienen beneficios, reproducción, distribución, comunicación pública y transformación." />

    <RadioButton
        android:id="@+id/test3_p2r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="219dp"
        android:textColor="#ffffff"
        android:text="Pueden cederse, obtención de beneficios, reproducción,  no distribución, comunicación pública y transformación." />

    <Button
        android:id="@+id/test3_siguiente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:background="@drawable/rounded_button"
        android:layout_alignBaseline="@+id/test3_anterior1"
        android:layout_alignBottom="@+id/test3_anterior1"
        android:layout_toRightOf="@+id/test3_anterior1"
        android:layout_toEndOf="@+id/test3_anterior1"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp" />

    <Button
        android:id="@+id/test3_anterior1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anterior"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/test3_p2r4"
        android:layout_alignStart="@+id/test3_p2r4"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp" />


</RelativeLayout>